#!/bin/sh

# PROVIDE: kadnode
# REQUIRE: SERVERS
# BEFORE: DAEMON
# KEYWORD: shutdown

. /etc/rc.subr

name=kadnode
rcvar=kadnode_enable

pidfile="/var/run/kadnode.pid"

command="%%PREFIX%%/bin/kadnode"
kadnode_flags="--config %%PREFIX%%/etc/kadnode/kadnode.conf --pidfile $pidfile --daemon"

required_files="%%PREFIX%%/etc/kadnode/kadnode.conf"

load_rc_config $name
: ${kadnode_enable:=yes}
run_rc_command "$1"
