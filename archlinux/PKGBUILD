# Maintainer: Moritz Warning <moritzwarning@web.de>

pkgname=kadnode-git
pkgver=1
pkgrel=1
pkgdesc="A P2P based DNS service using the Kademlia Distributed Hash Table (DHT)"
arch=('x86_64' 'i686')
url="http://github.com/mwarning/KadNode"
license=('MIT')
depends=('pacman')
makedepends=('git' 'libsodium')
source=("$pkgname"::git://github.com/mwarning/KadNode.git)
md5sums=('SKIP')
install="kadnode.install"


pkgver() {
	cd "$pkgname"
	# Use the tag of the last commit
	local ver="$(git describe --long)"
	printf "%s" "${ver//-/.}"
}

build() {
	cd "$pkgname"
	make FEATURES="auth cmd nss"
}

package() {
	cd "$pkgname"
	msg "Installing files..."

	mkdir -p "${pkgdir}/usr/bin"
	mkdir -p "${pkgdir}/lib"
	mkdir -p "${pkgdir}/etc/kadnode"
	mkdir -p "${pkgdir}/etc/systemd/system/multi-user.target.wants"

	cp build/kadnode ${pkgdir}/usr/bin/
	cp build/kadnode-ctl ${pkgdir}/usr/bin/
	cp build/libnss_kadnode.so.2 ${pkgdir}/lib/
	cp archlinux/kadnode.service ${pkgdir}/etc/systemd/system/
	cp debian/kadnode.conf ${pkgdir}/etc/kadnode/
	cp debian/peers.txt ${pkgdir}/etc/kadnode/
	systemctl enable kadnode
}
